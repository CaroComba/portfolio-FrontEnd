Algoritmo convesorUnidades
	Definir metros, centimetros, milimetros, pulgadas Como Real
	Escribir "Ingresar cantidad de metros"
	Leer metros;
	centimetros = 100*metros
	milimetros = 1000*metros
	pulgadas = 2.54*centimetros
	Escribir 'Son ', centimetros, 'cm'
	Escribir 'Son ', milimetros, 'mm'
	Escribir 'Son ', pulgadas, 'in'
FinAlgoritmo

